= form_for [:dashboard, supplemental] do |f|

  = render "shared/error_messages", :target => supplemental

  %p
    = f.label :title
    %br/
    = f.text_field :title

  %p
    = f.label :issue_id, "Issue"
    %br/
    = f.select :issue_id, options_for_select(@issues.map { |i| ["#{i.volume_number}.#{i.issue_number}", i.id] })

  %p
    = f.label :user_id, "Author"
    %br/
    = f.select :user_id, options_for_select(User.all.map { |u| [ u.name, u.id ] })

  %p
    = f.label :content
    %br/
    = f.text_area :content
  
  = f.submit "Save Supplemental", :disable_with => "Saving..."  

