set :application, "typhoon"
set :ssh_options, { :forward_agent => true }
default_run_options[:pty] = true  # Must be set for the password prompt from git to work
set :repository, "git@github.com:waltz/typhoon.git"
set :scm, "git"
set :user, "www"  # The server's user for deploys

set :branch, "master"
set :deploy_via, "remote_cache"

role :web, "staging.culanth.org"
role :db, "staging.culanth.org"

set :deploy_to, "/var/www/staging.culanth.org"
