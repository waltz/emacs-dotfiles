%h2 New Supplemental

- if @supplemental.errors.any?
  %ul.error_messages
    - @supplemental.errors.full_messages.each do |msg|
      %li= msg 

= form_for @supplemental, :url => dashboard_supplementals_path do |f|
  %p
    = f.label :title
    %br/
    = f.text_field :title

  %p
    = f.label :issue_id, "Issue"
    %br/
    = f.select :issue_id, options_for_select(@issues.map { |i| ["#{i.volume_number}.#{i.issue_number}", i.id] })

  %p
    = f.label :content
    %br/
    = f.text_area :content
  
  = f.submit "Create a new Supplemental", :disable_with => "Building..."  
