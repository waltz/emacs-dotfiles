require 'spec_helper'

describe BarriersController do
  render_views

  before :each do
    activate_authlogic
  end

  describe "The index page" do

    it "should assign a group of barriers" do
      assigns[:barriers].should_not be_nil
    end

    it "should pass along a new barrier object" do
      assigns[:barrier].should be_a_kind_of Barrier
    end
      
    it "should be ok rendering the main page" do
      get :index
      response.should be_success
    end

  end
  
  it "should render the new barrier entry page" do
    get :new
    response.should be_success
  end
  
end
