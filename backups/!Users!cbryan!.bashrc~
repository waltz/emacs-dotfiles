##
## ~/.bashrc
## 
## Christian Bryan
## Shell startup script for Bash.
##

# Custom bash prompt.
export PS1='\[\033[1;36m\]\u\[\033[0;37m\]@\[\033[1;35m\]\h\[\033[0;37m\]:\[\033[1;35m\]\w\[\033[0;37m\]\$\[\033[0m\] '

# Add binary paths for MacPorts.
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
export MANPATH=/opt/local/share/man:$MANPATH

# Some extra sauce to put the MacPorts apache install in the path.
export PATH=/opt/local/apache2/bin:$PATH

# Include Apple developer apps in the path.
export PATH=/Developer/usr/bin:/Developer/usr/sbin:$PATH
export MANPATH=/Developer/usr/share/man:$MANPATH

# Add my own special directory for apps. Mostly node.js.
export PATH=$HOME/local/bin:$PATH

# Keep Ruby's environment happy.
#export GEM_HOME='/opt/local/lib/ruby/gems/1.8'
#export GEM_PATH='/opt/local/lib/ruby/gems/1.8'
#export RUBYLIB='/opt/local/lib/ruby/gems/1.8'
#export RUBYOPT='rubygems'

# Awww yeah RVM.
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"  # This loads RVM into a shell session.

# Alias emacs.app as the default emacs in this env.
alias emacs='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -n'

alias savememory='/Applications/Firefox.app/Contents/MacOS/firefox -chromebug -P savememory'
alias chromebug='/Applications/Firefox.app/Contents/MacOS/firefox -chromebug'
alias firefox='/Applications/Firefox.app/Contents/MacOS/firefox'
alias railsapi='open /Users/cbryan/Code/railsapi/index.html'
alias webserver='python -m SimpleHTTPServer'
fontfix="defaults -currentHost write -globalDomain AppleFontSmoothing -int 2"

# Default text editor for quick edits.
#export EDITOR='mate -w'
export EDITOR='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -nw' # Use the w flag so we wait for emacs to release the buffer.

# Color-ify ls.
alias ls='ls -G'
LSCOLORS='ExFxCxDxBxegedabagacad'
export LSCOLORS

# ls shortcuts from debian.
alias ll='ls -alG'

# Postgres Shortcuts
alias start_postgres="sudo su postgres -c 'pg_ctl start -D /opt/local/var/db/postgresql83/defaultdb/'"
#export PATH=/opt/local/lib/postgresql83/bin:$PATH

# Control mysql
alias mysql_start="sudo -b /opt/local/bin/mysqld_safe5"
alias mysql_stop="/opt/local/bin/mysqladmin5 -u root -p shutdown"
alias mysql_ping="mysqladmin5 -u root -p ping"

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
