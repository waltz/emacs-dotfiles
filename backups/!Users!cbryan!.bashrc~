##
## ~/.bashrc
## 
## Christian Bryan
## Shell startup script for Bash.
##

# Custom bash prompt.
export PS1='\[\033[1;36m\]\u\[\033[0;37m\]@\[\033[1;35m\]\h\[\033[0;37m\]:\[\033[1;35m\]\w\[\033[0;37m\]\$\[\033[0m\] '

# Add binary paths for MacPorts.
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
export MANPATH=/opt/local/share/man:$MANPATH

# Include Apple developer apps in the path.
export PATH=/Developer/usr/bin:/Developer/usr/sbin:$PATH
export MANPATH=/Developer/usr/share/man:$MANPATH

# Keep Ruby's environment happy.
export GEM_HOME='/opt/local/lib/ruby/gems/1.8'
export GEM_PATH='/opt/local/lib/ruby/gems/1.8'
export RUBYLIB='/opt/local/lib/ruby/gems/1.8'
export RUBYOPT='rubygems'

# Alias emacs.app as the default emacs in this env.
alias emacs='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient -n'

# Default text editor for quick edits.
#export EDITOR='mate -w'
export EDITOR='emacs -w' # Use the w flag so we wait for emacs to release the buffer.

# Color-ify ls.
alias ls='ls -G'
LSCOLORS='ExFxCxDxBxegedabagacad'
export LSCOLORS

# ls shortcuts from debian.
alias ll='ls -alG'

