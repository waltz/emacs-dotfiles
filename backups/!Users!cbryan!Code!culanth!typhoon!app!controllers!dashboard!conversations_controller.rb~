class Dashboard::PostsController < DashboardController

  def index
    @posts = Post.all
  end

  def new
    @post = Post.new
  end

  def create
    @post = Post.new(params[:post])
    @post.user = current_user
    if @post.save
      redirect_to :action => :index
    else
      render :action => :new
    end
  end
  
end
