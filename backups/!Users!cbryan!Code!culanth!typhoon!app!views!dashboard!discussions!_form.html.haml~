= form_for [:dashboard, commentary] do |f|
  
  = render "shared/error_messages", :target => commentary
    
  %p
    = f.label :author_id, "Authors"
    %br/
    = f.select :author_id, User.all.map { |u| [ u.name, u.id ] }, { :include_blank => true }

  %p
    = f.label :content
    %br/
    = f.text_area :content, :class => "editor"

  = f.submit "Save", :disable_with => "Saving..."  
