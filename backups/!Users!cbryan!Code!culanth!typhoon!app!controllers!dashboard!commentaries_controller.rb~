class Dashboard::CuratedCollectionsController < DashboardController

  def index
    @curated_collections = CuratedCollection.order("created_at DESC").all
  end

  def new
    @curated_collection = CuratedCollection.new
  end

  def create
    @curated_collection = CuratedCollection.new(params[:curated_collection])
    if @curated_collection.save
      redirect_to :action => :index
    else
      render :action => :new
    end
  end

  def edit
    @curated_collection = CuratedCollection.find(params[:id])
  end

  def update
    params[:curated_collection][:user_ids] ||= []
    
    @curated_collection = CuratedCollection.find(params[:id])
    @curated_collection.update_attributes(params[:curated_collection])    
    if @curated_collection.save
      logger.info(@curated_collection.inspect)
      redirect_to :action => :index
    else
      render :action => :edit
    end
  end

  def destroy
    CuratedCollection.destroy(params[:id])
    flash[:message] = "Your curated_collection has been destroyed."
    redirect_to :action => :index
  end
  
end
