require 'spec_helper'

describe User do
  before :each do
    @user = User.create(:login => "testing",
                        :password => "testing",
                        :password_confirmation => "testing",
                        :email => "testing@nerdwerx.com",
                        :site_key => "mc2")
  end

  it "should load a role association" do
    @user.roles << "navigator"
    @user.save.should be true
    @user.should respond_to :navigator
    @user.should respond_to :navigator=
    # @user.navigator.should be nil
  end

  it "should be able to be assigned a navigator" do
    @user.roles << "navigator"
    @user.save.should be true
    lambda do
      @user.navigator.build
    end.should_not raise_error
  end

end
