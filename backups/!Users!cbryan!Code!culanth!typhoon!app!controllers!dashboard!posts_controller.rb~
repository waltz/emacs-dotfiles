class Dashboard::SupplementalsController < DashboardController

  def index
    @supplementals = Supplemental.all
  end

  def new
    @issues = Issue.all
    @supplemental = Supplemental.new
  end

  def create
    @supplemental = Supplemental.new(params[:supplemental])
    if @supplemental.save
      redirect_to :action => :index
    else
      @issues = Issue.all
      render :action => :new
    end
  end
  
end
