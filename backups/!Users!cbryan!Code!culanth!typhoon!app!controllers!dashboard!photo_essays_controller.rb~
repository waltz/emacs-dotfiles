class Dashboard::IssuesController < DashboardController

  def index
    @issues = Issue.all
  end

  def show
    redirect_to :action => :edit
  end
  
  def new
    @issue = Issue.new
  end

  def create
    @issue = Issue.new(params[:issue])
    if @issue.save
      redirect_to :action => :index
    else
      render :action => :new
    end
  end

  def edit
    @issue = Issue.find(params[:id])
  end

  def update
    @issue = Issue.find(params[:id])

    logger.info @issue.errors
    
    if @issue.update_attributes(params[:issue])
      redirect_to edit_dashboard_issue_path(@issue)
    else
      flash[:error] = "There was an issue saving your changes."
      render :action => :edit
    end    
  end  
end
