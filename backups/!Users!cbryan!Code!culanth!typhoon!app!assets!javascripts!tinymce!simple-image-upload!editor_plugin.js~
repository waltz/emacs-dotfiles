(function() {
  tinymce.PluginManager.requireLangPack('simple-image-upload');
  tinymce.create('tinymce.plugins.simpleImageUpload', {
    init: function(ed, url) {
      // Register an example button
      ed.addButton('upload-image', {
        title : 'Upload an Image',
        onclick : function() {
          // Display an alert when the user clicks the button
          ed.windowManager.alert('Hello world!');
        },
        'class' : 'bold' // Use the bold icon from the theme
      });
    }
  });
  tinymce.PluginManager.add("simple-image-upload", "tinymce.plugins.simpleImageUpload");
})();
