%h2 New Issue

- if @issue.errors.any?
  %ul.error_messages
    - @issue.errors.full_messages.each do |msg|
      %li= msg 

= form_for @issue, :url => dashboard_issues_path do |f|
  %p
    = f.label :volume_number,  "Volume Number"
    %br/
    = f.text_field :volume_number

  %p
    = f.label :issue_number
    %br/
    = f.text_field :issue_number

  %p
    = f.label :introduction
    %br/
    = f.text_area :introduction
  
  = f.submit "Create a new Issue", :disable_with => "Building..."  
